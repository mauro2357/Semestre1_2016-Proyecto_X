package repositorios;

import java.sql.Connection;
import LogicaNegocio.Usuarios;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class AgregarUsuarios {

    public AgregarUsuario(Usuarios usuario) {
    }
    public static void agregar(Usuarios usuario) {
        Connection con;
        Statement st;
        try {
            Class.forName("com.mysql.jdbc.Driver");
            con = DriverManager.getConnection("jdbc:mysql://localhost:3306/dbhotel", "root", "root");
            st = con.createStatement();
            String i = "INSERT INTO CLIENTES(cli_codigo, cli_nombre,cli_apellido, cli_celular, cli_correo, cli_sexo, ciu_codigo, cli_usuario, cli_clave) VALUES (" + usuario.getIdentificacion() + ",'" + usuario.getNombre() + "','" + usuario.getApellido() + "'," + usuario.getCelular() + ",'" + usuario.getCorreo() + "','" + usuario.getSexo() + "','" + usuario.getCiudad() + "','" + usuario.getUsuario() + "','" + usuario.getClave() + "')";
            System.out.println(i);
            st.executeUpdate(i);
            st.close();
        }catch (ClassNotFoundException e){
            System.out.println("La clase no existe");
        }catch (SQLException e){
            throw new RuntimeException(e);
        }
    }
}